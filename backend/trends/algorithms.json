{
  "global_average": {
    "name": "Global Average",
    "description": "Finds days where the number of messages exceeds the global average of messages per day by more a certain percentage of that average.",
    "params":
    {
      "threshold":
      {
        "name": "Threshold",
        "info": "Multiple of SD",
        "defaultValue": 0.5
      }
    },
    "plotData": [
      {
        "data": "days",
        "lines": {
          "show": true
        },
        "points": {
          "show": true,
          "radius": 4
        }
      },
      {
        "data": "trends",
        "points": {
          "show": true,
          "radius": 5
        },
        "color": "#ff0000"
      },
      {
        "data": "topSDPoints",
        "label": "Average + Factor*SD",
        "dashes": {"show": true},
        "color": "#0000ff"
      },
      {
        "data": "averagePoints",
        "label": "Average",
        "lines": {"show": true},
        "color": "#0000ff"
      },
      {
        "data": "bottomSDPoints",
        "label": "Average - Factor*SD",
        "dashes": {"show": true},
        "color": "#0000ff"
      }
    ],
    "plotOptions": {
      "xaxis": {
        "mode": "time",
        "timeformat": "%d/%m/%Y"
      },
      "grid": {
        "backgroundColor": "#f8f8f8",
        "hoverable": true,
        "clickable": true
      }
    }
  },
  "linear_regression":
  {
    "name": "Linear Regression",
    "description": "Finds days where the number of messages is greater than a certain threshold percentage of the value of the linear regression of messages from all days",
    "params":
    {
      "threshold":
      {
        "name": "Threshold",
        "info": "Percent from line value",
        "defaultValue": 50
      }
    },
    "plotData": [
      {
        "data": "days",
        "lines":   {
          "show": true
        },
        "points": {
          "show": true,
          "radius": 4
        }
      },
      {
        "data": "trends",
        "points":
        {
          "show": true,
          "radius": 5
        },
        "color": "#ff0000"
      },
      {
        "data": "line",
        "label": "Linear Regression",
        "lines": { "show": true },
        "color": "#0000ff"
      },
      {
        "data": "linePlusThreshold",
        "label": "+ Threshold",
        "dashes": { "show": true },
        "color": "#0000ff"
      },
      {
        "data": "lineMinusThreshold",
        "label": "- Threshold",
        "dashes": { "show": true },
        "color": "#0000ff"
      }
    ],
    "plotOptions":
    {
      "xaxis":
      {
        "mode": "time",
        "timeformat": "%d/%m/%Y"
      },
      "grid":
      {
        "backgroundColor": "#f8f8f8",
        "hoverable": true,
        "clickable": true
      }
    }
  },
  "running_average":
  {
    "name": "Running Average",
    "description": "",
    "params":
    {
      "threshold":
      {
        "name": "Threshold",
        "info": "Percent from average",
        "defaultValue": 50
      }
    },
    "plotData":
    [
      {
        "data": "days",
        "lines":   {
          "show": true
        },
        "points": {
          "show": true,
          "radius": 4
        }
      },
      {	"data": "trends",
        "points":
        {
          "show": true,
          "radius": 5
        },
        "color": "#ff0000"
      },
      {
        "data": "runningAverage",
        "label": "Running Average",
        "lines": { "show": true },
        "color": "#0000ff"
      },
      {
        "data": "runningAveragePlusThreshold",
        "label": "+ Threshold",
        "dashes": { "show": true },
        "color": "#0000ff"
      },
      {
        "data": "runningAverageMinusThreshold",
        "label": "- Threshold",
        "dashes": { "show": true },
        "color": "#0000ff"
      }],
    "plotOptions":
    {
      "xaxis":
      {
        "mode": "time",
        "timeformat": "%d/%m/%Y"
      },
      "grid":
      {
        "backgroundColor": "#f8f8f8",
        "hoverable": true,
        "clickable": true
      }
    }
  }
}